    "compilerOptions": {
        "outDir": "./build",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "target": "es6"
    },
    "include": [
        "src/**/*"
    ]
}